<?xml version="1.0" encoding="UTF-8"?>

<Configuration strict = "true">
	<Appenders>
		<Appender type= "Console" name="con">
			<Layout type="PatternLayout" pattern="%d{HH:mm:ss.SSS} [%t] %-7level %logger{36} %m%n"></Layout>
		</Appender>
	<Appender type= "File" name="file" fileName = "C:\Users\Ashwini patil\OneDrive\Documents\Ashwini\Selenium\logger.log">
			<Layout type="PatternLayout" pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-7level %logger{36} %m%n"></Layout>
		</Appender>
	</Appenders>

	<loggers>
		<Root level= "all">
			<AppenderRef ref="file"></AppenderRef>
		</Root>	
	</loggers>
</Configuration>

